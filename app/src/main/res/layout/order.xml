<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_2corners_filled">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivBranch"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvBranchName"
        android:layout_toEndOf="@id/ivBranch"
        android:layout_alignTop="@id/ivBranch"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="branch name"
        android:maxLines="2"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="25sp"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTime"
        android:text="time"
        android:layout_below="@id/tvBranchName"
        android:layout_toEndOf="@id/ivBranch"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="16sp"
        android:drawablePadding="5dp"
        app:drawableStartCompat="@drawable/ic_access_time_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAddress"
        android:layout_below="@id/tvTime"
        android:layout_toEndOf="@id/ivBranch"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="16sp"
        android:drawablePadding="5dp"
        android:textColor="#000000"
        android:maxLines="2"
        app:drawableStartCompat="@drawable/ic_person_pin_circle_24" />
</RelativeLayout>